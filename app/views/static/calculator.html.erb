<h1>Calculator</h1>

<div class="container">
  <div class="grid">
    <div id="calculation">0</div>
    <div id="answer">0</div>

    <button id="back" class="function" value="B"><span>&#8592;</span></button>
    <button id="ce" class="function" value="CE"><span>CE</span></button>
    <button id="c" class="function" value="C"><span>C</span></button>
    <button id="divide" class="operator" value="/"><span>/</span></button>
    <button id="seven" class="digit" value="7"><span>7</span></button>
    <button id="eight" class="digit" value="8"><span>8</span></button>
    <button id="nine" class="digit" value="9"><span>9</span></button>
    <button id="multiply" class="operator" value="X"><span>X</span></button>
    <button id="four" class="digit" value="4"><span>4</span></button>
    <button id="five" class="digit" value="5"><span>5</span></button>
    <button id="six" class="digit" value="6"><span>6</span></button>
    <button id="minus" class="operator" value="-"><span>-</span></button>
    <button id="one" class="digit" value="1"><span>1</span></button>
    <button id="two" class="digit" value="2"><span>2</span></button>
    <button id="three" class="digit" value="3"><span>3</span></button>
    <button id="add" class="operator" value="+"><span>+</span></button>
    <input type="button" class="blank" value="">
    <button id="zero" class="digit" value="0"><span>0</span></button>
    <button id="dot" class="operator" value="."><span>.</span></button>
    <button id="equals" class="operator" value="="><span>=</span></button>
  </div>
</div>
<script src="https://unpkg.com/mathjs@4.0.1/dist/math.min.js"></script>
<script src="calculator.js"></script>