<div class="container">
  <h1>Blogs Index</h1>

  <%= render 'shared/nav' %>
</div>
<hr>

<div>
  <% @blogs.each do |blog| %>
  <div class="col-md-6">
    
    <%= link_to blog.title, blog_path(blog) %>
    <%= truncate(blog.body) %>
    <%= blog.date %>

  </div>
  <div class="col-md-6">
    <div class="row">
      <%= link_to "Edit", edit_blog_path(blog), class: "btn btn-info btn-sm" %>
      <%= link_to "Delete", blog_path(blog), class: "btn btn-info btn-sm", method: :delete, date: { confirm: 'Are you sure?' } %>
    </div>
  </div>  

  <% end %>

  <%= link_to "New Blog", new_blog_path, class: "btn btn-info" %>
</div>