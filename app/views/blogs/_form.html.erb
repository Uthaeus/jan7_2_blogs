
<%= form_for @blog do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
  </div>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, class: 'form-control', rows: 15, placeholder: 'Content' %>
  </div>

  <%= f.submit "Save", class: "btn btn-info" %>

<% end %>